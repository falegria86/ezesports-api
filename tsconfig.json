{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    
    // Cambiar moduleResolution para compatibilidad con Node.js
    "moduleResolution": "node",
    // Eliminar o comentar estas opciones que impiden la compilación
    // "allowImportingTsExtensions": true,
    // "verbatimModuleSyntax": true,
    
    // Cambiar noEmit a false para generar archivos JS
    "noEmit": false,
    
    // Añadir outDir para especificar dónde se generarán los archivos
    "outDir": "./dist",
    "rootDir": "./src",
    
    // Añadir estas opciones para compatibilidad con módulos ESM
    "esModuleInterop": true,
    "resolveJsonModule": true,
    
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    
    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}